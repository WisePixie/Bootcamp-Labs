using MovieLab.Services;
@model List<Movie>

@if (Model.Count == 0)
{
    <p>No movies found.</p>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-3">
                @*can adjust in future*@
                <div class="card">
                    @*Bootstrap card*@
                    <img src="@movie.Poster" class="card-img-top" />
                    <div class="card-body">
                        <h4 class="card-title">@movie.Title</h4>
                    </div>
                </div>
            </div>
        }

    </div>
}